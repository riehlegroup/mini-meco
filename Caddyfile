# Global options
{
    # Disable admin API for production security
    admin off
    # Set ACME email for production certificate notifications
    email {$ACME_EMAIL}
}

# Server configuration
{$DOMAIN:http://localhost} {
    # TLS: For real domains, Caddy will automatically get Let's Encrypt certs
    # For localhost or when DOMAIN is empty, use http:// prefix to disable TLS

    # Enable compression
    encode gzip

    # API requests: strip /api prefix and proxy to backend
    handle /api/* {
        uri strip_prefix /api
        reverse_proxy server:3000 {
            # Forward real client IP and protocol
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
            header_up Host {host}
        }
    }

    # Serve frontend static files
    handle {
        root * /srv
        try_files {path} /index.html
        file_server

        # Cache static assets
        @static {
            path *.js *.css *.png *.jpg *.jpeg *.gif *.ico *.svg *.woff *.woff2 *.ttf *.eot
        }
        header @static Cache-Control "public, max-age=31536000, immutable"

        # Don't cache index.html
        @html {
            path /index.html
        }
        header @html Cache-Control "no-cache, no-store, must-revalidate"
    }

    # Security headers
    header {
        # Prevent MIME type sniffing
        X-Content-Type-Options "nosniff"
        # Prevent clickjacking
        X-Frame-Options "SAMEORIGIN"
        # XSS protection
        X-XSS-Protection "1; mode=block"
        # Referrer policy
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    # Add HSTS only for production domains with HTTPS
    @prodHttps {
        protocol https
        not host localhost 127.0.0.1
    }
    header @prodHttps Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
}
